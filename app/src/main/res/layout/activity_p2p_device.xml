<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <fragment
            class="ucla.glomguo.privacy_hadoop.DeviceListFragment"
            android:id="@+id/frag_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:layout="@layout/device_list">
            <!-- Preview: layout=@layout/row_devices -->
        </fragment>
        <fragment
            class="ucla.glomguo.privacy_hadoop.DeviceDetailFragment"
            android:id="@+id/frag_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/device_detail">
            <!-- Preview: layout=@layout/device_detail -->
        </fragment>

        <fragment
            class="ucla.glomguo.privacy_hadoop.TerminalFragment"
            android:id="@+id/frag_terminal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/terminal_frag">
            <!-- Preview: layout=@layout/device_detail -->
        </fragment>
    </LinearLayout>
</LinearLayout>
